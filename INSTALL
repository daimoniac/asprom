Debian Jessie:

sudo apt-get install python git mysql-server python-bottle python-mysqldb python-crontab python-netaddr python-nmap python-paste

cd ~
git clone https://github.com/daimoniac/asprom.git
cd asprom

vi etc/asprom.cfg
--> set arbitrary db password

mysql -uroot -p
> create database asprom
> grant all privileges on asprom.* to asprom@localhost identified by '<arbitrarypassword>'
> exit

mysql -uroot -p asprom < db/empty.sql

./aspromGUI.py


